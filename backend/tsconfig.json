{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2022"],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,

    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/routes-backup.ts",
    "src/**/storage-backup.ts",
    "src/**/test-*.ts",
    "src/**/test-*.mjs",
    "src/vite.ts"
  ]
}
